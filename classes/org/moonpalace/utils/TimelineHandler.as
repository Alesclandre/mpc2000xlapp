package org.moonpalace.utils{	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.display.MovieClip;	public class  TimelineHandler	{		public static const REWIND_FINISHED:String = "rewindFinished";				public function TimelineHandler() {					}				public static function rewind( pEvt:Event ) {			pEvt.currentTarget.gotoAndStop( pEvt.currentTarget.currentFrame - 2 );			if( pEvt.currentTarget.currentFrame <= 2 ) {				pEvt.currentTarget.gotoAndStop( 1 );				pEvt.currentTarget.removeEventListener( Event.ENTER_FRAME , rewind );					pEvt.currentTarget.dispatchEvent( new Event( REWIND_FINISHED ) );			}		}				public static function rewindClip( pClip:MovieClip ) {			pClip.gotoAndStop( pClip.currentFrame - 2 );			if( pClip.currentFrame <= 2 ) {				pClip.gotoAndStop( 1 );				pClip.removeEventListener( Event.ENTER_FRAME , rewind );					pClip.dispatchEvent( new Event( REWIND_FINISHED ) );			}		}	}	}